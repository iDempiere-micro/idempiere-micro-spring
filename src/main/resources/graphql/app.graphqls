type User {
    Description: String!
    id: ID!
}

type Category {
    Name: String!
    id: ID!
}

type Country {
    name: String!
    id: ID!
}

type Version {
   v: String!
}

type Query {
    # The API Version
    version: Version!
    # The currently logged user
    me: User!
    # All the system users
    users: [User]!
    # All the crm categories
    categories: [Category]!
    # All countries
    countries: [Country]!
}

