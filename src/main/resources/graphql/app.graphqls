type User {
    Description: String!
    _ID: ID!
}

type Category {
    Name: String!
    _ID: ID!
}

type Country {
    Name: String!
    _ID: ID!
}

type Query {
    # The API Version
    version: String!
    # The currently logged user
    me: User!
    # All the system users
    users: [User]!
    # All the crm categories
    categories: [Category]!
    # All countries
    countries: [Country]!
}

